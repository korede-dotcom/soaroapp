<script>
    document.addEventListener("DOMContentLoaded", function () {
    const currentPath = window.location.pathname.split("/").pop(); // Get the current page filename
    const menuLinks = document.querySelectorAll("#menu a"); // Select all menu links

    menuLinks.forEach(link => {
        if (link.getAttribute("href") === currentPath) {
            link.classList.add("active"); // Add 'active' class to the matching link
            let parent = link.closest("ul"); // Find the closest parent <ul>
            while (parent && parent.id !== "menu") {
                parent.previousElementSibling?.classList.add("active"); // Highlight the parent category
                parent = parent.closest("ul").parentElement.closest("ul"); // Move up the hierarchy
            }
        }
    });
});

</script>